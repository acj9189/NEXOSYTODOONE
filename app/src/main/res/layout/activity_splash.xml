<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_welcome">

    <ImageView
        android:id="@+id/imgViewLogoSplah"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/meteoro"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        tools:srcCompat="@drawable/meteoro">

    </ImageView>

    <TextView
        android:id="@+id/textViewWel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/Welcome"
        android:textColor="@color/colorGradientEnd"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/imgViewLogoSplah"
        android:textStyle="bold"
        android:textSize="45dp">

    </TextView>

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textViewWel"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="500"
        android:progress="1">

    </ProgressBar>

    <TextView
        android:id="@+id/textViewPle"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Wait"
        android:textColor="@color/colorGradientStart"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="20dp">

    </TextView>

</RelativeLayout>