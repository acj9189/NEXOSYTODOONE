<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ExplicitApiactivity">

    <com.iammert.library.readablebottombar.ReadableBottomBar
        android:id="@+id/ReadableBottomBar2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:rbb_indicatorHeight="7dp"
        app:rbb_indicatorColor="@color/colorGradientStart"
        app:rbb_initialIndex="1"
        app:rbb_tabs="@xml/tabs"/>

    <RelativeLayout
        android:id="@+id/ReLatServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReadableBottomBar2"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textViewTitleS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/titleExplicit"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>

        <ImageButton
            android:id="@+id/imgButtonS"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textViewTitleS"
            android:layout_centerHorizontal="true"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/sunny"
            android:tint="#00FFFFFF"
            tools:src="@drawable/sunny">

        </ImageButton>

        <EditText
            android:id="@+id/editTextLat"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_below="@+id/imgButtonS"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/objects_rounded_corners"
            android:hint="@string/lat"
            android:inputType="numberDecimal|numberSigned"
            android:paddingStart="20sp"
            android:paddingLeft="25px"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextLon"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_below="@+id/editTextLat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/objects_rounded_corners"
            android:hint="@string/lon"
            android:inputType="numberDecimal|numberSigned"
            android:paddingStart="20sp"
            android:paddingLeft="25px"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnConsultarExplicit"
            android:layout_width="131dp"
            android:layout_height="38dp"
            android:layout_below="@+id/editTextLon"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_rounded_orange_big"
            android:padding="8dp"
            android:text="@string/Consultar"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReLatServicio"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textViewTempE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgViewClima"
            android:layout_centerHorizontal="true"
            android:text="@string/Temperature"
            android:textColor="#666666"
            android:textColorHint="#666666"
            android:textSize="40dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/textViewTempPE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/textViewTempE"
            android:textColor="#666666"
            android:textColorHint="#666666"
            android:textStyle="italic"
            android:textSize="30dp">

        </TextView>

        <TextView
            android:id="@+id/textViewCityE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="@string/Ubicacion"
            android:textColor="#666666"
            android:textColorHint="#666666"
            android:layout_below="@+id/textViewTempPE"
            android:textSize="35dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/textViewCXityLocationE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="@string/Temperature"
            android:textColor="#666666"
            android:textColorHint="#666666"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/textViewCityE"
            android:textStyle="italic"
            android:textSize="20dp">

        </TextView>

    </RelativeLayout>





</RelativeLayout>